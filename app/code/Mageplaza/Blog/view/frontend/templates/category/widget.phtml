<script>
    require(['jquery'],function($){
     // Get the text inside data-ui-id="page-title-wrapper"
    var pageTitle = $('[data-ui-id="page-title-wrapper"]').text().trim().toLowerCase();

    // Assuming $customvariable contains the HTML string of category names
    var $customvariable = '<?php echo $block->getCategoryTreeHtml($tree); ?>';

    // Replace &amp; with &
    $customvariable = $customvariable.replace(/&amp;/g, '&');

    // Convert custom variable to lowercase and trim
    var customVariableLower = $customvariable.toLowerCase();

    // Find all category elements
    $('.category-item').each(function() {
        // Get the text of the category
        var categoryText = $(this).find('.list-categories').text().trim().toLowerCase();
        
        // Check if the category text matches the page title
        if (categoryText === pageTitle) {
            // Add the active class to the <a> tag within the matched category
            $(this).find('.list-categories').addClass('active');
        }
    });
    })
</script>