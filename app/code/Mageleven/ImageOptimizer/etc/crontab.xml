<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="mageleven_imageoptimizer">
        <job name="mageleven_imageoptimizer_scan" instance="Mageleven\ImageOptimizer\Cron\Scan" method="execute">
            <config_path>mageleven_imageoptimizer/cron/expression_scan</config_path>
        </job>
        <job name="mageleven_imageoptimizer_optimize" instance="Mageleven\ImageOptimizer\Cron\Optimize" method="execute">
            <config_path>mageleven_imageoptimizer/cron/expression_optimize</config_path>
        </job>
    </group>
</config>
