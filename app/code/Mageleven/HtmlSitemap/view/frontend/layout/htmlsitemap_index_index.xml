<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
        <referenceBlock name="breadcrumbs">
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Home</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Home</item>
                    <item name="label" xsi:type="string" translate="true">Home</item>
                    <item name="link" xsi:type="string">{{baseUrl}}</item>
                </argument>
            </action>
            <action method="addCrumb">
                <argument name="crumbName" xsi:type="string" translate="true">Sitemap</argument>
                <argument name="crumbInfo" xsi:type="array">
                    <item name="title" xsi:type="string" translate="true">Sitemap</item>
                    <item name="label" xsi:type="string" translate="true">Sitemap</item>
                </argument>
            </action>
        </referenceBlock>

		<referenceContainer name="content">
            <block name="html-sitemap-general" template="Mageleven_HtmlSitemap::general.phtml"/>
            <block class="Mageleven\HtmlSitemap\Block\Sitemap" name="blog.sitemap">
                <block class="Mageleven\HtmlSitemap\Block\Catalog\Category" name="index.catalog.category" template="Mageleven_HtmlSitemap::index/catalog_category.phtml" ifconfig="mfhs/categorylinks/displaycategorylinks"/>
                <block class="Mageleven\HtmlSitemap\Block\Catalog\Product" name="index.catalog.product" template="Mageleven_HtmlSitemap::index/catalog_product.phtml" ifconfig="mfhs/productlinks/displayproductlinks"/>
                <block class="Mageleven\HtmlSitemap\Block\Blog\Post" name="blog.post" template="Mageleven_HtmlSitemap::index/blog_post.phtml" ifconfig="mfhs/blogpostlinks/displaypostlinks"/>
                <block class="Mageleven\HtmlSitemap\Block\Blog\Category" name="blog.category" template="Mageleven_HtmlSitemap::index/blog_category.phtml" ifconfig="mfhs/blogcategorylinks/displayblogcategorylinks"/>
                <block class="Mageleven\HtmlSitemap\Block\Additional\Additional" name="index.additional.additional" template="Mageleven_HtmlSitemap::index/additional_additional.phtml" ifconfig="mfhs/additionallinks/displaylinks"/>
                <block class="Mageleven\HtmlSitemap\Block\Cms\Page" name="index.cms.pages" template="Mageleven_HtmlSitemap::index/cms_pages.phtml" ifconfig="mfhs/cmspagelinks/displaycmspagelinks"/>
            </block>
        </referenceContainer>
	</body>
</page>
