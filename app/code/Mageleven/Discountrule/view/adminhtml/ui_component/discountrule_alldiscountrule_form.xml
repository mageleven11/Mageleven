<?xml version="1.0" encoding="UTF-8"?>

<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">discountrule_alldiscountrule_form.alldiscountrule_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Discountrule Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Mageleven\Discountrule\Block\Adminhtml\Alldiscountrule\Edit\SaveAndContinueButton"/>
            <button name="save" class="Mageleven\Discountrule\Block\Adminhtml\Alldiscountrule\Edit\SaveButton"/>
            <button name="reset" class="Mageleven\Discountrule\Block\Adminhtml\Alldiscountrule\Edit\ResetButton"/>
            <button name="delete" class="Mageleven\Discountrule\Block\Adminhtml\Alldiscountrule\Edit\DeleteButton"/>
            <button name="back" class="Mageleven\Discountrule\Block\Adminhtml\Alldiscountrule\Edit\BackButton"/>
        </buttons>
        <namespace>discountrule_alldiscountrule_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>discountrule_alldiscountrule_form.alldiscountrule_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="alldiscountrule_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="discountrule/alldiscountrule/save"/>
        </settings>
        <dataProvider class="Mageleven\Discountrule\Model\Alldiscountrule\DataProvider" name="alldiscountrule_form_data_source">
            <settings>
                <requestFieldName>discountrule_id</requestFieldName>
                <primaryFieldName>discountrule_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="discountrule_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>discountrule_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="title" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Title</label>
                <dataScope>title</dataScope>
            </settings>
        </field>
        <field name="price_from" sortOrder="21" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Price From</label>
                <dataScope>price_from</dataScope>
            </settings>
        </field>
        <field name="price_to" sortOrder="22" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Price To</label>
                <dataScope>price_to</dataScope>
            </settings>
        </field>
        <field name="discount" sortOrder="23" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">alldiscountrule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Discount</label>
                <dataScope>discount</dataScope>
            </settings>
        </field>
    </fieldset>
    
</form>
