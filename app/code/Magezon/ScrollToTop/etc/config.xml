<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <scroll_to_top>
            <general>
                <enable>1</enable>
                <current_version>1.0.0</current_version>
                <hide_on_small_device>0</hide_on_small_device>
                <small_device_width>720</small_device_width>
                <display_on_fontend>0</display_on_fontend>
                <display_on_backend>0</display_on_backend>
            </general>
            <display>
                <display_type>0</display_type>
                <background_color_hover>#ffaa00</background_color_hover>
                <resize_button>70</resize_button>
                <text>
                    <text_on_button>TOP</text_on_button>
                    <text_size>40</text_size>
                    <text_color>#ff9500</text_color>
                    <text_color_hover>#004aeb</text_color_hover>
                </text>
                <image>
                    <image_type>2</image_type>
                    <image_url>https://www.pngkey.com/png/full/302-3022380_scroll-to-top-scroll-top-icons-transparent.png</image_url>
                    <image_sample>https://demo.magezon.com/scrolltotop/pub/static/version1617933701/adminhtml/Magento/backend/en_US/Magezon_ScrollToTop/images/default/scrolltotop3.png</image_sample>
                    <image_alt>Scroll To Top</image_alt>
                </image>
                <icon>
                    <marker_icon>fas mgz-fa-angle-double-up</marker_icon>
                    <icon_color>#ff9500</icon_color>
                    <icon_color_hover>#004aeb</icon_color_hover>
                </icon>
                <animations>
                    <distance_type>0</distance_type>
                    <speed_type>slow</speed_type>
                    <scroll_distance_pixel>0</scroll_distance_pixel>
                    <scroll_distance_percent>0</scroll_distance_percent>
                    <scroll_speed_custom>400</scroll_speed_custom>
                    <animation_in>bounce</animation_in>
                    <animation_out>fadeOutUp</animation_out>
                </animations>
            </display>
            <position>
                <button_position>0</button_position>
                <margin_x>20</margin_x>
                <margin_y>90</margin_y>
            </position>
        </scroll_to_top>
    </default>
</config>

